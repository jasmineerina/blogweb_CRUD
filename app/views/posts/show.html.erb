<p style="color: green"><%= notice %></p>
<div class="container">
  <%= render @post %>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Delete Post", @post, method: :delete %>
  </div>

  <%= render 'comments/comment', post: @post %>

  <% #style comment %>

  <div class="card mt-3">
  <% if user_signed_in?%>

  <div class="container">
    <div class="row">
      <h2>Add a Comment</h2>
    </div>
    <div class="row">
      <%= form_with model: @comment, method: :post, url: create_comment_url do |form| %>
      <%= form.hidden_field :post_id, value: @post.id %>

      <div class="col">
        <%= form.text_field :user_id, type: :hidden, value: current_user.email %>
      </div>

    <div class="col">
      <%= form.text_area :content %>
    </div>
    <div class="col">
      <%= form.submit %>
    </div>
<% end %>
<% end %>
</div>
</div>

</div>
